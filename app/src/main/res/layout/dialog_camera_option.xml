<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.example.finiview.camera.ui.main.CameraFocusMode" />

        <import type="com.example.finiview.camera.ui.main.CameraImageRatioMode" />

        <import type="com.example.finiview.camera.ui.main.CameraFlashMode" />

        <import type="com.example.finiview.camera.ui.main.CameraAntiBandingMode" />

        <variable
            name="viewModel"
            type="com.example.finiview.camera.ui.main.CameraOptionViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_top_white_r15"
        android:paddingHorizontal="20dp"
        android:paddingBottom="40dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView"
            android:layout_width="29dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="28dp"
            android:src="@drawable/shape_rounded_gray200_r14"
            app:layout_constraintBottom_toTopOf="@+id/cl_option_iso"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <!-- Iso START -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_option_iso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_option_iso_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/dialog_camera_option_iso_title" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/sb_option_iso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_option_iso_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_option_iso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sb_option_iso"
                tools:text="@string/dialog_camera_option_iso" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Iso END -->

        <!-- Exposure START -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_option_exposure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_option_iso">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_option_exposure_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/dialog_camera_option_exposure_title" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/sb_option_exposure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_option_exposure_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_option_exposure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sb_option_exposure"
                tools:text="@string/dialog_camera_option_exposure" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Exposure START -->

        <!-- Focus START -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_option_focus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_option_exposure">

            <HorizontalScrollView
                android:id="@+id/hv_option_focus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_option_focus_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_camera_option_focus_title"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_option_focus_manual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:onClick="@{() -> viewModel.onClickCameraFocus(CameraFocusMode.MANUAL)}"
                        android:padding="20dp"
                        android:text="@string/dialog_camera_option_focus_manual"
                        app:layout_constraintEnd_toStartOf="@id/btn_option_focus_infinity"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_option_focus_title" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_option_focus_infinity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:onClick="@{() -> viewModel.onClickCameraFocus(CameraFocusMode.INFINITY)}"
                        android:padding="20dp"
                        android:text="@string/dialog_camera_option_focus_infinity"
                        app:layout_constraintEnd_toStartOf="@id/btn_option_focus_macro"
                        app:layout_constraintStart_toEndOf="@id/btn_option_focus_manual"
                        app:layout_constraintTop_toBottomOf="@id/tv_option_focus_title" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_option_focus_macro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:onClick="@{() -> viewModel.onClickCameraFocus(CameraFocusMode.MACRO)}"
                        android:padding="20dp"
                        android:text="@string/dialog_camera_option_focus_macro"
                        app:layout_constraintEnd_toStartOf="@id/btn_option_focus_auto"
                        app:layout_constraintStart_toEndOf="@id/btn_option_focus_infinity"
                        app:layout_constraintTop_toBottomOf="@id/tv_option_focus_title" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_option_focus_auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:onClick="@{() -> viewModel.onClickCameraFocus(CameraFocusMode.AUTO)}"
                        android:padding="20dp"
                        android:text="@string/dialog_camera_option_focus_auto"
                        app:layout_constraintEnd_toStartOf="@id/btn_option_focus_continuous_focus_picture"
                        app:layout_constraintStart_toEndOf="@id/btn_option_focus_macro"
                        app:layout_constraintTop_toBottomOf="@id/tv_option_focus_title" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_option_focus_continuous_focus_picture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:onClick="@{() -> viewModel.onClickCameraFocus(CameraFocusMode.CONTINUOUS_FOCUS_PICTURE)}"
                        android:padding="20dp"
                        android:text="@string/dialog_camera_option_focus_continuous_focus_picture"
                        app:layout_constraintEnd_toStartOf="@id/btn_option_focus_continuous_focus_video"
                        app:layout_constraintStart_toEndOf="@id/btn_option_focus_auto"
                        app:layout_constraintTop_toBottomOf="@id/tv_option_focus_title" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_option_focus_continuous_focus_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:onClick="@{() -> viewModel.onClickCameraFocus(CameraFocusMode.CONTINUOUS_FOCUS_VIDEO)}"
                        android:padding="20dp"
                        android:text="@string/dialog_camera_option_focus_continuous_focus_picture"
                        app:layout_constraintEnd_toStartOf="@id/btn_option_focus_edof"
                        app:layout_constraintStart_toEndOf="@id/btn_option_focus_continuous_focus_picture"
                        app:layout_constraintTop_toBottomOf="@id/tv_option_focus_title" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_option_focus_edof"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:onClick="@{() -> viewModel.onClickCameraFocus(CameraFocusMode.EDOF)}"
                        android:padding="20dp"
                        android:text="@string/dialog_camera_option_focus_edof"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btn_option_focus_continuous_focus_video"
                        app:layout_constraintTop_toBottomOf="@id/tv_option_focus_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/sb_option_focus_manual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:padding="10dp"
            android:visibility="@{viewModel.cameraFocusMode == CameraFocusMode.MANUAL ? View.VISIBLE : View.GONE, default=gone}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_option_focus"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_option_focus_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:textSize="13sp"
            android:visibility="@{viewModel.cameraFocusMode == CameraFocusMode.MANUAL ? View.VISIBLE : View.GONE, default=gone}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sb_option_focus_manual"
            tools:text="@string/dialog_camera_option_focus_manual_value"
            tools:visibility="visible" />
        <!-- Focus END -->

        <!-- Image Ratio START -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_option_image_ratio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_option_focus_manual">

            <HorizontalScrollView
                android:id="@+id/hv_option_image_ratio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_option_image_ratio_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_camera_option_image_ratio_title"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_option_image_ratio_1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:onClick="@{() -> viewModel.onClickCameraImageRatio(CameraImageRatioMode.RATIO_1_1)}"
                        android:padding="20dp"
                        android:text="@string/dialog_camera_option_image_ratio_1_1"
                        app:layout_constraintEnd_toStartOf="@id/btn_option_image_ratio_4_3"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_option_image_ratio_title" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_option_image_ratio_4_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:onClick="@{() -> viewModel.onClickCameraImageRatio(CameraImageRatioMode.RATIO_4_3)}"
                        android:padding="20dp"
                        android:text="@string/dialog_camera_option_image_ratio_4_3"
                        app:layout_constraintEnd_toStartOf="@id/btn_option_image_ratio_16_9"
                        app:layout_constraintStart_toEndOf="@id/btn_option_image_ratio_1_1"
                        app:layout_constraintTop_toBottomOf="@id/tv_option_image_ratio_title" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_option_image_ratio_16_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:onClick="@{() -> viewModel.onClickCameraImageRatio(CameraImageRatioMode.RATIO_16_9)}"
                        android:padding="20dp"
                        android:text="@string/dialog_camera_option_image_ratio_16_9"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btn_option_image_ratio_4_3"
                        app:layout_constraintTop_toBottomOf="@id/tv_option_image_ratio_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Image Ratio END -->

        <!-- Flash START -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_option_flash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_option_image_ratio">

            <HorizontalScrollView
                android:id="@+id/hv_option_flash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_option_flash_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_camera_option_flash_title"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_option_flash_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:onClick="@{() -> viewModel.onClickCameraFlash(CameraFlashMode.OFF)}"
                        android:padding="20dp"
                        android:text="@string/dialog_camera_option_flash_off"
                        app:layout_constraintEnd_toStartOf="@id/btn_option_flash_on"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_option_flash_title" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_option_flash_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:onClick="@{() -> viewModel.onClickCameraFlash(CameraFlashMode.ON)}"
                        android:padding="20dp"
                        android:text="@string/dialog_camera_option_flash_on"
                        app:layout_constraintEnd_toStartOf="@id/btn_option_flash_auto"
                        app:layout_constraintStart_toEndOf="@id/btn_option_flash_off"
                        app:layout_constraintTop_toBottomOf="@id/tv_option_flash_title" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_option_flash_auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:onClick="@{() -> viewModel.onClickCameraFlash(CameraFlashMode.AUTO)}"
                        android:padding="20dp"
                        android:text="@string/dialog_camera_option_flash_auto"
                        app:layout_constraintEnd_toStartOf="@id/btn_option_flash_auto_red_eye"
                        app:layout_constraintStart_toEndOf="@id/btn_option_flash_on"
                        app:layout_constraintTop_toBottomOf="@id/tv_option_flash_title" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_option_flash_auto_red_eye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:onClick="@{() -> viewModel.onClickCameraFlash(CameraFlashMode.AUTO_RED_EYE)}"
                        android:padding="20dp"
                        android:text="@string/dialog_camera_option_flash_auto_red_eye"
                        app:layout_constraintEnd_toStartOf="@id/btn_option_flash_torch"
                        app:layout_constraintStart_toEndOf="@id/btn_option_flash_auto"
                        app:layout_constraintTop_toBottomOf="@id/tv_option_flash_title" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_option_flash_torch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:onClick="@{() -> viewModel.onClickCameraFlash(CameraFlashMode.TORCH)}"
                        android:padding="20dp"
                        android:text="@string/dialog_camera_option_flash_torch"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btn_option_flash_auto_red_eye"
                        app:layout_constraintTop_toBottomOf="@id/tv_option_flash_title" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Flash END -->

        <!-- Anti Banding START -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_option_anti_banding"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_option_flash">

            <HorizontalScrollView
                android:id="@+id/hv_option_anti_banding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_option_anti_banding_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_camera_option_anti_banding_title"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_option_anti_banding_auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:onClick="@{() -> viewModel.onClickCameraAntiBanding(CameraAntiBandingMode.AUTO)}"
                        android:padding="20dp"
                        android:text="@string/dialog_camera_option_anti_banding_auto"
                        app:layout_constraintEnd_toStartOf="@id/btn_option_anti_banding_hz50"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_option_anti_banding_title" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_option_anti_banding_hz50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:onClick="@{() -> viewModel.onClickCameraAntiBanding(CameraAntiBandingMode.HZ50)}"
                        android:padding="20dp"
                        android:text="@string/dialog_camera_option_anti_banding_hz50"
                        app:layout_constraintEnd_toStartOf="@id/btn_option_anti_banding_hz60"
                        app:layout_constraintStart_toEndOf="@id/btn_option_anti_banding_auto"
                        app:layout_constraintTop_toBottomOf="@id/tv_option_anti_banding_title" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_option_anti_banding_hz60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:onClick="@{() -> viewModel.onClickCameraAntiBanding(CameraAntiBandingMode.HZ60)}"
                        android:padding="20dp"
                        android:text="@string/dialog_camera_option_anti_banding_hz60"
                        app:layout_constraintEnd_toStartOf="@id/btn_option_anti_banding_none"
                        app:layout_constraintStart_toEndOf="@id/btn_option_anti_banding_hz50"
                        app:layout_constraintTop_toBottomOf="@id/tv_option_anti_banding_title" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_option_anti_banding_none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:onClick="@{() -> viewModel.onClickCameraAntiBanding(CameraAntiBandingMode.NONE)}"
                        android:padding="20dp"
                        android:text="@string/dialog_camera_option_anti_banding_none"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btn_option_anti_banding_hz60"
                        app:layout_constraintTop_toBottomOf="@id/tv_option_anti_banding_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Anti Banding END -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>